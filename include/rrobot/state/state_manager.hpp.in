#ifndef STATE_MANAGER_HPP
#define STATE_MANAGER_HPP

#include <mutex>
#include <rrobot/state/state.hpp>
#include <rrobot/state/rrpstatus.hpp>

namespace rrobot {
/**
 * @class StateManager
 * @brief
 * performs operations on state.
 */
class StateManager {
   public:

    int32_t StateManager::getFlags();

    RR_CMODES StateManager::getMode();

    RRP_STATUS StateManager::getStatus();

    /**
     * @fn setStatus
     * @brief
     * resets the statuses, note that this should only be done from the mapper.
     */
    void setStatus(int32_t statuses);

    void StateManager::setMode(RR_CMODES mode);

   private:
   State _state;
   std::mutex _lock;
   const int32_t DRONE_ARMED = 0 | INITILIZING | ERROR | RELOADING | SHUTTING_DOWN | TERMINATED;
};
}  // namespace rrobot

#endif